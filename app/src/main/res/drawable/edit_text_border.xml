<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border when EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when focused -->
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Border color and width when focused -->
        </shape>
    </item>
</selector>
